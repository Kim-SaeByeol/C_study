#include <stdio.h>
	void main() {
		printf("첫번째 값을 입력하세요 ==> ");
		int a, b;
		int result;
		result = a + b ;
		printf("%d + %d = %d\n" , a, b, result);

		result = a - b;
		printf("%d - %d = %d\n" , a, b, result);

		result = a * b;
		printf("%d * %d = %d\n" , a, b, result);

		result = a / b;
		printf("%d / %d = %d\n", a, b, result);

	}
